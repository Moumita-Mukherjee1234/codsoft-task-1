#include <iostream>
using namespace std;
int main()
{//taking the input from the users
    int a,b,c;
char d;
cout<<"enter the 1st number";
cin>>a;

cout<<"enter the operation you want to do";
cin>>d;

cout<<"enter the 2nd number";
cin>>b;
//task to perform
if(d =='+')
{cout<<a+b;}
else if(d =='-')
{cout<<a-b;}
else if(d =='*')
{cout<<a*b;}
else if (d =='/')
{cout<<a/b;}
}
